package com.cobakedua;

import java.util.ArrayList;
import java.text.NumberFormat;
import java.util.Locale;

class DataRoom {
    private String name;
    private int stock;
    private long price;
    private long total;

    DataRoom(String name, int stock, long price){
        this.name = name;
        this.stock = stock;
        this.price = price;
        this.total = stock * price;
    }

    public String getName() {
        return name;
    }

    public int getStock() {
        return stock;
    }

    public long getPrice() {
        return price;
    }

    public long getTotal(){
        return total;
    }

}

class ShowData {
    NumberFormat numberFormat = NumberFormat.getNumberInstance(new Locale("in", "ID"));
    ArrayList<DataRoom> show;
    
    ShowData(){
        show = new ArrayList<>();
    }

    public void setData(String name, int stock, long price){
        show.add(new DataRoom(name,stock,price));
    }

    public void display(){
        for ( DataRoom dataRoom : show ) {
            System.out.println("Car Name\t: " + dataRoom.getName());
            System.out.println("Car Stock\t: " + dataRoom.getStock());
            System.out.println("Car Price\t: " + numberFormat.format(dataRoom.getPrice()));
            System.out.println("----------------------------");
            System.out.println("Total Price\t: " + numberFormat.format(dataRoom.getTotal()) + "\n");
        }
    }
}

public class Main {
    public static void main(String[] args) {
        ShowData object = new ShowData();

        object.setData("Kijang inova",12,350000000);
        object.setData("Daihatsu Xenia",13,190000000);
        object.setData("Toyota Avanza",15,205000000);

        object.display();
    }
}
